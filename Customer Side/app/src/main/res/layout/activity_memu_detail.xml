<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MemuDetail"
    android:background="#5CE9EF"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Tabletop.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Tabletop.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scv1"
        >





        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:text="Menu Detail "
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"/>


            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Description "
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_bg"
                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView
                android:id="@+id/tvprice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="100  Rs"
                android:textColor="#f4210233"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:background="@drawable/edittext_bg"
                />


            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:id="@+id/lhr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/butninus"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"
                    android:text="-"
                    android:textSize="20dp"
                    android:onClick="minusClick"
                    />


                <EditText
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/txtqty"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="1"
                    android:background="@drawable/edittext_bg"


                    />


                <Button
                    android:id="@+id/butplus"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"
                    android:text="+"
                    android:textSize="20dp"
                    android:onClick="plusClick"
                    />

                <Button
                    android:id="@+id/Addc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="Add To Cart"
                    android:textSize="15dp"
                    android:onClick="adcClick"

                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/lhr1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvat"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Total is "
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:background="@drawable/edittext_bg"
                    />


                <TextView
                    android:id="@+id/tvamt"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#0000ff"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tvamt3"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edittext_bg"
                    android:text="Rs"
                    android:textColor="#ff0000"
                    android:textSize="25dp" />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"/>



            <Button
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Payment"
                android:textSize="20dp"
                android:onClick="payClick"

                />

            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Back"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>